{
	"compilerOptions": {
		"baseUrl": ".",
		"types": ["vite/client", "node"],
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"include": ["src"]
}
